<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.paint.*?>
<?import javafx.scene.text.*?>

<VBox alignment="TOP_CENTER" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="350.0" minWidth="600.0"
      prefHeight="350.0" prefWidth="600.0" styleClass="styleBorder" xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml/1">
    <children>
        <HBox alignment="TOP_CENTER" VBox.vgrow="ALWAYS">
            <children>
                <VBox alignment="CENTER" maxWidth="75.0" minWidth="75.0" spacing="20.0" HBox.hgrow="ALWAYS">
                    <children>
                        <Button id="btnOptions" alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false"
                                prefHeight="12.0" prefWidth="19.0" style="-fx-background-color: transparent;">
                            <textFill>
                                <LinearGradient endX="1.0" endY="1.0">
                                    <stops>
                                        <Stop>
                                            <color>
                                                <Color/>
                                            </color>
                                        </Stop>
                                        <Stop offset="1.0">
                                            <color>
                                                <Color red="1.0" green="1.0" blue="1.0"/>
                                            </color>
                                        </Stop>
                                    </stops>
                                </LinearGradient>
                            </textFill>
                            <graphic>
                                <ImageView fitHeight="20.0" fitWidth="24.0" pickOnBounds="true" preserveRatio="true">
                                    <image>
                                        <Image url="@images/options.png"/>
                                    </image>
                                </ImageView>
                            </graphic>
                        </Button>
                        <Button id="btnHome" mnemonicParsing="false" styleClass="styleButton" VBox.vgrow="ALWAYS">
                            <graphic>
                                <ImageView fitHeight="32.0" fitWidth="32.0" pickOnBounds="true" preserveRatio="true">
                                    <image>
                                        <Image url="@images/home.png"/>
                                    </image>
                                </ImageView>
                            </graphic>
                        </Button>
                        <Button id="btnEdit" mnemonicParsing="false" prefHeight="40.0" prefWidth="48.0"
                                styleClass="styleButton" textAlignment="CENTER">
                            <font>
                                <Font size="14.0"/>
                            </font>
                            <graphic>
                                <ImageView fitHeight="32.0" fitWidth="32.0" pickOnBounds="true" preserveRatio="true">
                                    <image>
                                        <Image url="@images/edit.png"/>
                                    </image>
                                </ImageView>
                            </graphic>
                        </Button>
                        <Region VBox.vgrow="ALWAYS"/>
                    </children>
                    <padding>
                        <Insets top="5.0"/>
                    </padding>
                    <HBox.margin>
                        <Insets/>
                    </HBox.margin>
                    <styleClass>
                        <String fx:value="styleBorder"/>
                        <String fx:value="styleBackgroundHighlight"/>
                    </styleClass>
                </VBox>
                <VBox alignment="TOP_CENTER" maxWidth="200.0" minWidth="150.0" styleClass="styleBorder"
                      HBox.hgrow="ALWAYS">
                    <children>
                        <Label id="lbServerName" prefWidth="200.0" styleClass="styleBorder" VBox.vgrow="ALWAYS">
                            <padding>
                                <Insets left="2.0"/>
                            </padding>
                            <font>
                                <Font name="System Bold Italic" size="13.0"/>
                            </font>
                        </Label>
                        <TreeView id="tvServerChannels" minWidth="150.0" VBox.vgrow="ALWAYS"/>
                    </children>
                </VBox>
                <VBox alignment="CENTER" minWidth="250.0" styleClass="styleBorder" HBox.hgrow="ALWAYS">
                    <children>
                        <Label id="lbChannelName" styleClass="styleBorder" VBox.vgrow="ALWAYS">
                            <font>
                                <Font name="System Bold Italic" size="13.0"/>
                            </font>
                        </Label>
                        <ListView id="lvTextChat" styleClass="styleBorder" VBox.vgrow="ALWAYS"/>
                        <HBox id="quoteVisible" alignment="CENTER_LEFT">
                            <children>
                                <Label id="lblQuote">
                                    <font>
                                        <Font size="10.0"/>
                                    </font>
                                    <HBox.margin>
                                        <Insets right="5.0"/>
                                    </HBox.margin>
                                </Label>
                                <Button id="btnCancelQuote" mnemonicParsing="false" text="X">
                                    <font>
                                        <Font size="8.0"/>
                                    </font>
                                </Button>
                            </children>
                        </HBox>
                        <HBox alignment="CENTER_LEFT" maxHeight="28.0" VBox.vgrow="ALWAYS">
                            <children>
                                <TextField id="tfInputMessage" styleClass="styleBorder" HBox.hgrow="ALWAYS"/>
                                <Button id="btnEmoji" alignment="CENTER" mnemonicParsing="false"
                                        style="-fx-background-radius: 100;" HBox.hgrow="ALWAYS">
                                    <font>
                                        <Font size="4.0"/>
                                    </font>
                                    <graphic>
                                        <ImageView fitHeight="21.0" fitWidth="21.0" pickOnBounds="true"
                                                   preserveRatio="true">
                                            <image>
                                                <Image url="@images/smiley.png"/>
                                            </image>
                                        </ImageView>
                                    </graphic>
                                </Button>
                            </children>
                        </HBox>
                    </children>
                </VBox>
                <VBox alignment="TOP_CENTER" maxWidth="200.0" minWidth="100.0" styleClass="styleBorder"
                      HBox.hgrow="ALWAYS">
                    <children>
                        <Label id="lblServerUsers" prefWidth="200.0" styleClass="styleBorder" VBox.vgrow="ALWAYS">
                            <padding>
                                <Insets left="2.0"/>
                            </padding>
                            <font>
                                <Font name="System Bold Italic" size="13.0"/>
                            </font>
                        </Label>
                        <ListView id="lvServerUsers" VBox.vgrow="ALWAYS"/>
                    </children>
                </VBox>
            </children>
            <VBox.margin>
                <Insets/>
            </VBox.margin>
        </HBox>
    </children>
</VBox>
