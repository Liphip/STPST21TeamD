<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.paint.*?>
<?import javafx.scene.text.*?>

<VBox minHeight="350.0" minWidth="600.0" prefHeight="350.0" prefWidth="600.0" styleClass="styleBorder"
      xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml/1">

    <children>
        <HBox alignment="CENTER_LEFT" VBox.vgrow="ALWAYS">
            <children>
                <VBox alignment="TOP_CENTER" maxWidth="75.0" minWidth="75.0" spacing="20.0" HBox.hgrow="ALWAYS">
                    <children>
                        <Button id="btnOptions" alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false"
                                prefHeight="12.0" prefWidth="19.0" style="-fx-background-color: transparent;">
                            <graphic>
                                <ImageView id="btnOptions" fitHeight="20.0" fitWidth="24.0" pickOnBounds="true"
                                           preserveRatio="true">
                                    <image>
                                        <Image url="@images/options.png"/>
                                    </image>
                                </ImageView>
                            </graphic>
                            <textFill>
                                <LinearGradient endX="1.0" endY="1.0">
                                    <stops>
                                        <Stop>
                                            <color>
                                                <Color/>
                                            </color>
                                        </Stop>
                                        <Stop offset="1.0">
                                            <color>
                                                <Color red="1.0" green="1.0" blue="1.0"/>
                                            </color>
                                        </Stop>
                                    </stops>
                                </LinearGradient>
                            </textFill>
                        </Button>
                        <Button id="btnPrivateChats" mnemonicParsing="false" styleClass="styleButton">
                            <graphic>
                                <ImageView id="btnWelcome" fitHeight="32.0" fitWidth="42.0" pickOnBounds="true"
                                           preserveRatio="true">
                                    <image>
                                        <Image url="@images/chat.png"/>
                                    </image>
                                </ImageView>
                            </graphic>
                        </Button>
                        <Button id="btnAddServer" mnemonicParsing="false" styleClass="styleButton">
                            <graphic>
                                <ImageView id="btnAddServer" fitHeight="32.0" fitWidth="32.0" pickOnBounds="true"
                                           preserveRatio="true">
                                    <image>
                                        <Image url="@images/addServer.png"/>
                                    </image>
                                </ImageView>
                            </graphic>
                        </Button>
                        <Button id="btnEnterInvitation" mnemonicParsing="false" styleClass="styleButton">
                            <graphic>
                                <ImageView id="btnEnterInvitation" fitHeight="32.0" fitWidth="32.0" pickOnBounds="true"
                                           preserveRatio="true">
                                    <image>
                                        <Image url="@images/enter_invitation.png"/>
                                    </image>
                                </ImageView>
                            </graphic>
                        </Button>
                        <Region VBox.vgrow="ALWAYS"/>
                    </children>
                    <styleClass>
                        <String fx:value="styleBorder"/>
                        <String fx:value="styleBackgroundHighlight"/>
                    </styleClass>
                    <padding>
                        <Insets top="5.0"/>
                    </padding>
                </VBox>
                <VBox alignment="TOP_CENTER" styleClass="styleBorder" HBox.hgrow="ALWAYS">
                    <children>
                        <Label id="lblYourServers" styleClass="styleBorder" text="Your servers" VBox.vgrow="ALWAYS">
                            <font>
                                <Font name="System Bold Italic" size="13.0"/>
                            </font>
                        </Label>
                        <ListView id="lwServerList" VBox.vgrow="ALWAYS"/>
                    </children>
                </VBox>
            </children>
        </HBox>
    </children>
</VBox>
