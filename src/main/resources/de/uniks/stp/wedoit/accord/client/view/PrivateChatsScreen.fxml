<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.paint.Color?>
<?import javafx.scene.paint.LinearGradient?>
<?import javafx.scene.paint.Stop?>
<?import javafx.scene.text.Font?>

<VBox minHeight="350.0" minWidth="600.0" prefHeight="350.0" styleClass="styleBorder" xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml/1">
    <children>
        <HBox alignment="CENTER_LEFT" VBox.vgrow="ALWAYS">
            <children>
                <VBox alignment="CENTER" maxWidth="75.0" minWidth="75.0" spacing="20.0" HBox.hgrow="ALWAYS">
                    <children>
                        <Button id="btnOptions" alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false"
                                prefHeight="12.0" prefWidth="19.0" style="-fx-background-color: transparent;"
                                styleClass="sidebar-Button">
                            <textFill>
                                <LinearGradient>
                                    <stops>
                                        <Stop offset="1.0">
                                            <color>
                                                <Color blue="1.0" green="1.0" red="1.0"/>
                                            </color>
                                        </Stop>
                                    </stops>
                                </LinearGradient>
                            </textFill>
                            <graphic>
                                <ImageView id="btnSetting" fitHeight="20.0" fitWidth="24.0" pickOnBounds="true"
                                           preserveRatio="true">
                                    <Image url="@images/options.png"/>
                                </ImageView>
                            </graphic>
                        </Button>
                        <Button id="btnHome" mnemonicParsing="false" styleClass="sidebar-Button" VBox.vgrow="ALWAYS">
                            <graphic>
                                <ImageView fitHeight="32.0" fitWidth="32.0" pickOnBounds="true" preserveRatio="true">
                                    <Image url="@images/home.png"/>
                                </ImageView>
                            </graphic>
                        </Button>
                        <Region VBox.vgrow="ALWAYS"/>
                    </children>
                    <padding>
                        <Insets top="5.0"/>
                    </padding>
                    <HBox.margin>
                        <Insets/>
                    </HBox.margin>
                    <styleClass>
                        <String fx:value="styleBackgroundHighlight"/>
                        <String fx:value="styleBorder"/>
                    </styleClass>
                </VBox>
                <VBox alignment="TOP_CENTER" maxWidth="200.0" minWidth="125.0" styleClass="styleTop"
                      HBox.hgrow="ALWAYS">
                    <children>
                        <Label id="lblOnlineUser" minHeight="25.0" prefWidth="200.0" styleClass="styleBorder"
                               VBox.vgrow="ALWAYS">
                            <font>
                                <Font name="System Bold Italic" size="13.0"/>
                            </font>
                            <padding>
                                <Insets left="2.0"/>
                            </padding>
                        </Label>
                        <ListView id="lwOnlineUsers" VBox.vgrow="ALWAYS"/>
                    </children>
                </VBox>
                <VBox alignment="CENTER" styleClass="styleBorder" HBox.hgrow="ALWAYS">
                    <children>
                        <HBox alignment="TOP_CENTER" prefWidth="200.0" styleClass="styleTop">
                            <children>
                                <Label id="lblSelectedUser" minHeight="25.0" styleClass="styleBorder">
                                    <font>
                                        <Font name="System Bold Italic" size="13.0"/>
                                    </font>
                                </Label>
                                <Button id="btnPlay" mnemonicParsing="false" styleClass="playButton">
                                    <HBox.margin>
                                        <Insets left="70.0"/>
                                    </HBox.margin>
                                </Button>
                            </children>
                        </HBox>
                        <ListView id="lwPrivateChat" styleClass="listView1" VBox.vgrow="ALWAYS"/>
                        <HBox id="quoteVisible" alignment="CENTER_LEFT">
                            <children>
                                <Label id="lblQuote">
                                    <font>
                                        <Font size="10.0"/>
                                    </font>
                                    <HBox.margin>
                                        <Insets right="5.0"/>
                                    </HBox.margin>
                                </Label>
                                <Button id="btnCancelQuote" mnemonicParsing="false" text="X">
                                    <font>
                                        <Font size="8.0"/>
                                    </font>
                                </Button>
                            </children>
                        </HBox>
                        <HBox alignment="CENTER_LEFT" VBox.vgrow="NEVER">
                            <children>
                                <TextArea id="tfEnterPrivateChat" prefHeight="10.0" styleClass="textAreaInput"
                                          wrapText="true" HBox.hgrow="ALWAYS"/>
                                <Button id="btnEmoji" alignment="CENTER" mnemonicParsing="false"
                                        style="-fx-background-radius: 100;" HBox.hgrow="ALWAYS">
                                    <font>
                                        <Font size="4.0"/>
                                    </font>
                                    <graphic>
                                        <ImageView fitHeight="21.0" fitWidth="21.0" pickOnBounds="true"
                                                   preserveRatio="true">
                                            <Image url="@images/smiley.png"/>
                                        </ImageView>
                                    </graphic>
                                </Button>
                            </children>
                        </HBox>
                    </children>
                </VBox>
            </children>
            <VBox.margin>
                <Insets/>
            </VBox.margin>
        </HBox>
    </children>
</VBox>
