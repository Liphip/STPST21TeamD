<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox id="vBoxMain" alignment="CENTER" spacing="10.0" xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml/1">
    <children>
        <HBox spacing="10.0" VBox.vgrow="ALWAYS">
            <children>
                <Label id="lblChannelName" text="%CHANNEL_NAME" HBox.hgrow="ALWAYS">
                    <font>
                        <Font name="System Bold" size="14.0" />
                    </font>
                    <HBox.margin>
                        <Insets top="2.0" />
                    </HBox.margin>
                </Label>
                <TextField id="tfChannelName" styleClass="createTextField" HBox.hgrow="ALWAYS">
                    <HBox.margin>
                        <Insets />
                    </HBox.margin>
                </TextField>
            </children>
            <VBox.margin>
                <Insets />
            </VBox.margin>
        </HBox>
        <HBox id="hBoxChannelType" alignment="CENTER_LEFT" spacing="25.0" VBox.vgrow="ALWAYS">
            <children>
                <RadioButton id="radioBtnAudio" mnemonicParsing="false" HBox.hgrow="ALWAYS">
                    <font>
                        <Font size="14.0" />
                    </font>
                </RadioButton>
                <RadioButton id="radioBtnText" mnemonicParsing="false" HBox.hgrow="ALWAYS">
                    <font>
                        <Font size="14.0" />
                    </font>
                </RadioButton>
            </children>
        </HBox>
        <HBox spacing="10.0" VBox.vgrow="ALWAYS">
            <children>
                <Label id="lblPrivileged" text="%PRIVILEGED" HBox.hgrow="ALWAYS">
                    <font>
                        <Font name="System Bold" size="14.0" />
                    </font>
                    <HBox.margin>
                        <Insets />
                    </HBox.margin>
                </Label>
                <CheckBox id="checkBoxPrivileged" mnemonicParsing="false" HBox.hgrow="ALWAYS">
                    <HBox.margin>
                        <Insets />
                    </HBox.margin>
                </CheckBox>
            </children>
        </HBox>
        <HBox id="hBoxLblMembers" VBox.vgrow="ALWAYS">
            <children>
                <Label id="lblMembers" text="%MEMBERS" HBox.hgrow="ALWAYS">
                    <font>
                        <Font name="System Bold" size="14.0" />
                    </font>
                </Label>
            </children>
        </HBox>
        <VBox id="vBoxMemberNameAndCheckBox" alignment="CENTER" spacing="10.0" VBox.vgrow="ALWAYS">
            <children>
                <fx:include source="subview/MemberListSubView.fxml" />
            </children>
        </VBox>
        <Label id="lblError" textFill="RED" VBox.vgrow="ALWAYS" />
        <HBox alignment="CENTER" spacing="50.0" VBox.vgrow="ALWAYS">
            <children>
                <Button id="btnDeleteChannel" defaultButton="true" mnemonicParsing="false" styleClass="styleButton" text="%DELETE" textFill="RED" HBox.hgrow="ALWAYS">
                    <font>
                        <Font name="System Bold" size="14.0" />
                    </font>
                    <HBox.margin>
                        <Insets right="70.0" />
                    </HBox.margin>
                </Button>
                <Button id="btnSave" defaultButton="true" mnemonicParsing="false" styleClass="styleButton" text="%SAVE" HBox.hgrow="ALWAYS">
                    <font>
                        <Font name="System Bold" size="14.0" />
                    </font>
                </Button>
            </children>
        </HBox>
    </children>
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
    <styleClass>
        <String fx:value="styleBorder" />
        <String fx:value="styleBackgroundPopup" />
    </styleClass>
</VBox>
