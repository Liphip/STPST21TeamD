<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="TOP_CENTER" spacing="5.0" xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml/1">
    <children>
        <Label id="lblAttention" alignment="CENTER" contentDisplay="CENTER" styleClass="redLabel">
            <font>
                <Font name="System Bold" size="18.0" />
            </font>
        </Label>
        <Label id="lblError" alignment="CENTER" contentDisplay="CENTER" styleClass="redLabel" textAlignment="CENTER">
            <font>
                <Font name="System Bold" size="12.0" />
            </font>
        </Label>
        <HBox alignment="CENTER">
            <children>
                <Label id="lblAreYouSure" alignment="CENTER" contentDisplay="CENTER">
                    <font>
                        <Font name="System Bold" size="14.0" />
                    </font>
                </Label>
            </children>
        </HBox>
        <HBox alignment="CENTER">
            <children>
                <Button id="btnDiscard" mnemonicParsing="false" prefHeight="30.0" prefWidth="80.0" styleClass="styleButton" text="Discard">
                    <font>
                        <Font name="System Bold" size="14.0" />
                    </font>
                </Button>
                <Region minWidth="102.0" prefWidth="102.0" />
                <Button id="btnDelete" mnemonicParsing="false" prefHeight="30.0" prefWidth="80.0" styleClass="styleButton" text="Delete">
                    <font>
                        <Font name="System Bold" size="14.0" />
                    </font>
                </Button>
            </children>
        </HBox>
    </children>
    <styleClass>
        <String fx:value="styleBorder" />
        <String fx:value="styleBackgroundHighlight" />
    </styleClass>
   <padding>
      <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
   </padding>
</VBox>
