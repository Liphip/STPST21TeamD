<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox maxHeight="-Infinity" maxWidth="-Infinity" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx">
   <Region prefHeight="60.0" />
   <HBox prefHeight="39.0" prefWidth="600.0">
      <Region minWidth="100.0" prefWidth="100.0" />
      <Label id="lbYou" text="You">
         <font>
            <Font size="25.0" />
         </font>
      </Label>
      <Region HBox.hgrow="ALWAYS" />
      <Label id="lbScore" text="0:0">
         <font>
            <Font size="20.0" />
         </font>
      </Label>
      <Region HBox.hgrow="ALWAYS" />
      <Label id="lbOpponent" maxWidth="120.0" minWidth="120.0" text="Opponent">
         <font>
            <Font size="25.0" />
         </font>
      </Label>
      <Region minWidth="60.0" />
   </HBox>
   <Region minHeight="50.0" prefHeight="70.0" prefWidth="200.0" />
   <HBox prefHeight="50.0" prefWidth="200.0">
      <Region minHeight="50.0" minWidth="50.0" prefWidth="100.0" />
      <Button id="btnRock" mnemonicParsing="false" text="Rock">
         <font>
            <Font size="14.0" />
         </font>
      </Button>
      <Region minWidth="70.0" HBox.hgrow="ALWAYS" />
      <Button id="btnPaper" mnemonicParsing="false" text="Paper">
         <font>
            <Font size="14.0" />
         </font>
      </Button>
      <Region minWidth="70.0" HBox.hgrow="ALWAYS" />
      <Button id="btnScissors" mnemonicParsing="false" text="Scissors">
         <font>
            <Font size="14.0" />
         </font>
      </Button>
      <Region prefWidth="100.0" />
   </HBox>
   <Region minHeight="50.0" prefHeight="50.0" prefWidth="200.0" />
   <HBox prefHeight="100.0" prefWidth="200.0">
      <Region minWidth="100.0" />
      <VBox prefHeight="200.0" prefWidth="100.0">
         <Label text="You Played">
            <VBox.margin>
               <Insets left="46.0" />
            </VBox.margin>
         </Label>
         <ImageView id="imgYouPlayed" fitHeight="150.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true">
            <Image url="@images/game/choosing.png" />
         </ImageView>
      </VBox>
      <Region minWidth="50.0" HBox.hgrow="ALWAYS" />
      <VBox prefHeight="200.0" prefWidth="100.0">

         <Label text="Opponent Played">
            <VBox.margin>
               <Insets left="30.0" />
            </VBox.margin>
         </Label>
         <ImageView id="imgOppPlayed" fitHeight="150.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true">
            <Image url="@images/game/choosing.png" />
         </ImageView>

      </VBox>
      <Region minWidth="100.0" />

   </HBox>

</VBox>
